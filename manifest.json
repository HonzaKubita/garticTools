{
    "name": "Gartic Tools",
    "version": "1.0.0",
    "description": "Extension for Gartic Phone online game. Adds useful tools for drawing and playing.",
    "manifest_version": 3,
    "author": "Honza Kubita",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "/icons/icon256.png"
    },
    "content_scripts": [
        {
            "js": ["dist/index.bundle.js"],
            "matches": ["https://garticphone.com/*"],
            "all_frames": true
        }
    ]
}